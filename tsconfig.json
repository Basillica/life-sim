{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "types": ["vite/client", "node"],
        "noEmit": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "jsxImportSource": "solid-js"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
